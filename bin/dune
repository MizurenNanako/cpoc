(ocamllex raw_lexer)

(library
 (name raw_lexer)
 (modules raw_lexer)
 (libraries lexical))

(library
 (name pure_lexer)
 (modules pure_lexer)
 (libraries raw_lexer parser lexical))

(menhir
 (modules parser)
 (flags --table --inspection --dump --external-tokens Lexical.Token)
 (infer true))

(library
 (name parser)
 (modules parser)
 (libraries lexical syntactical menhirLib))

(library
 (name lexical)
 (modules lexical)
 (preprocess
  (pps ppx_sexp_conv))
 (libraries sexplib))

(library
 (name semantic)
 (modules semantic)
 (preprocess
  (pps ppx_sexp_conv))
 (libraries sexplib))

(library
 (name syntactical)
 (modules syntactical)
 (preprocess
  (pps ppx_sexp_conv))
 (libraries sexplib lexical))

(executable
 (modules main)
 (name main)
 (public_name cpoc)
 (libraries raw_lexer parser syntactical sexplib))
